 <!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- bootstrap.min.css dosyası bağlantı etiketi -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- bootstrap-icons.min.css dosyası bağlantı etiketi -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <!-- layout.css dosyası bağlantı etiketi -->
    <link href="~/css/layout.css" rel="stylesheet" />
    <!-- utils.css dosyası bağlantı etiketi -->
    <link href="~/css/utils.css" rel="stylesheet" />
    <!-- theme-mode.css dosyası bağlantı etiketi -->
    <link href="~/css/theme-mode.css" rel="stylesheet" />

    @RenderSection("customStyles", false)

    <title>CyproData | @ViewBag.Title</title>
</head>
<body class="dark">
    <div>
        <!-- header start -->
        <header class="w-100 px-4 flex-shrink-0 position-fixed">
            <div class="py-3 place-items-between">
                <!-- logo start -->
                <div id="logo">
                    <a href="/Home/Index">
                        <img src="" alt="logo" height="25" />
                    </a>
                </div>
                <!-- logo end -->

                <!-- navbar start -->   
                <nav class="place-items-between">
                    <!-- navigation buttons start -->
                    <div class="place-items-between gap-3 mx-3">
                        <a href="#" class="btn btn-primary">Piyasalar <i class="bi bi-clipboard-data-fill"></i></a>
                        <a href="#" class="btn btn-primary">Duyurular <i class="bi bi-megaphone-fill"></i></a>
                        <a href="#" class="btn btn-primary">Kolay Al/Sat <i class="bi bi-cash-coin"></i></a>
                        <a href="#" class="btn btn-primary">Giriş Yap <i class="bi bi-person"></i></a>
                    </div>
                    <!-- navigation buttons end -->

                    <!-- theme-mode start -->
                    <div class="d-flex">
                        <div class="theme-switch-wrapper">
                            <label class="theme-switch" for="theme-switch">
                                <input type="checkbox" id="theme-switch" />
                                <div class="slider round">
                                    <i class="bi bi-brightness-high px-1"></i>
                                    <i class="bi bi-moon px-1"></i>
                                </div>
                            </label>
                        </div>
                    </div>
                    <!-- theme-mode end -->
                </nav>
                <!-- navbar end -->
            </div>
        </header>
        <!-- header end -->

        <!-- main start -->
        <main>
            @RenderBody()
        </main>
        <!-- main end -->

        <!-- footer start -->
        <footer>

        </footer>
        <!-- footer end -->
    </div>

    <!-- bootstrap.bundle.min.js dosyası bağlantı etiketi -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jquery.min.js dosyası bağlantı etiketi -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    @RenderSection("customScripts", false)

</body>
</html> 